#!/usr/bin/env bash

_REPO=$(git rev-parse --show-toplevel)
_REPONAME=$(basename "$_REPO")

export GOPATH="$_REPO/dev/go"
export PATH="$_REPO/dev/bin:$_REPO/dev/go/bin:$PATH"

_DOTENV="$_REPO/.env"
if [[ -f "$_DOTENV" ]]; then
    echo >&2 "Including dotenv: $_DOTENV"
    source "$_DOTENV"
fi

export PS1="($_REPONAME) $PS1"
